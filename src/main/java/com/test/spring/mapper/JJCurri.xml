<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MyBatis 사용 시 SQL을 관리하는 파일 -->
<mapper namespace="JJCurri">
	<select id="getCurType" resultType="com.test.spring.dto.CurTypeDTO">
		SELECT * FROM curType order by seq
	</select>
	
	<insert id="categoryadd" parameterType="String">
		insert into curType values (curtypeseq.nextval, #{str})
	</insert>
	
	<delete id="categorydel" parameterType="String">
		delete from curType where seq = #{str}
	</delete>
	
	<select id="getlastseqCategory" resultType="Integer">
		select max(Seq) from curtype
	</select>
	
	<update id="categoryedit" parameterType="map">
		update curType set curtype.curtype = #{editcategoryname} where curtype.seq = #{seq}
	</update>



	<select id="getcurriculumlist" resultType="com.test.spring.dto.CurriculumDTO">
		SELECT * FROM curriculum order by seq
	</select>
	
</mapper>



<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="student">

	<select id="loginCheck" parameterType="Integer" resultType="Integer">
		select count(*) from tblAttendance where day = to_char(sysdate, 'yyyy-mm-dd') and seq = #{seq}
	</select>

	<select id="checkInOut" parameterType="Integer" resultType="Integer" statementType="CALLABLE">
		{call studentCheck(#{seq}, #{mode=OUT, javaType=int, jdbcType=NUMERIC})}
	</select>
	
	<select id="checkVac" parameterType="Integer" resultType="Integer">
		select count(*) from tblAttendance where sseq = #{seq} and aseq = 4
	</select>


</mapper>
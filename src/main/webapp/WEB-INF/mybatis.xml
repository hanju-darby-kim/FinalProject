<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<!-- MyBatis 실행 중 사용되는 옵션들 설정 -->
	
	<!-- Mapper에서 사용하는 자료형의 풀네임대신에 사용할 별칭 설정 -->
	<typeAliases>
		<typeAlias type="com.test.spring.MyBatisDTO" alias="dto"/>
		<!-- 설정해두면, 모든 매퍼에 적용된다. -->

		<!-- <typeAlias type="java.util.HashMap" alias="map"/> -->
		<!-- HashMap은 디폴트로 이미 정의되어있다. -->
	</typeAliases>


</configuration>



























